{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "baseUrl": ".",
  "paths": {
    "*": ["src/*"],
    "tests": ["tests/*"],
    "@components/*": ["src/components/*"],
    "@screens/*": ["src/screens/*"],
    "@navigation/*": ["src/navigation/*"],
    "@types/*": ["src/types/*"],
    "@theme/*": ["src/theme/*"]
  },
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
